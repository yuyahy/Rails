<div class="main user-show">
  <div class="container">
    <div class="user">
      <div class="user-left">
        <!-- <img>タグを用いて、プロフィール画像を表示してください-->
      <img src= "<%= "/user_images/#{@user.image_name}" %>">
      </div>
      <!-- 以下で、ユーザー名を出力してください -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力してください -->
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
      <%= link_to("edit", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>
  </div>
</div>
